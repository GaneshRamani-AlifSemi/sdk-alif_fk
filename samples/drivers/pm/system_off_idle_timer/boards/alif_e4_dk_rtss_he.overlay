/*
 * Enable RTC and Set the counter to increment every 1sec
 */
&rtc0 {
	prescaler = < 0 >;
	status = "okay";
};

/**
 * Set the console uart frequency to use the HFOSC(38.4)
 */
&uart4 {
	clock-frequency = < 38400000 >;
};

/ {
	chosen {
		zephyr,cortex-m-idle-timer = &rtc0;
	};

	power-states {
		off: off {
			min-residency-us = < 10000 >;
		};
	};
};
